<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.HttpTransfers.NewPage"
             Title="{Binding Title}">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="{Binding ErrorMessage}" TextColor="Red" />

                <Label Text="Remote Url" />
                <Entry Text="{Binding Url}" />

                <Label Text="Local File Name" />
                <Entry Text="{Binding LocalFileName}" />

                <Label Text="Is Upload" />
                <Switch IsToggled="{Binding IsUpload}" />

                <Button Text="Save Task" Command="{Binding Save}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>